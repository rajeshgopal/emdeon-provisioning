import subprocess


def ipadd():
	process = subprocess.Popen('facter ipaddress', stdout=subprocess.PIPE, stderr=None, shell=True)
	ipaddress = process.stdout.readlines()[0].strip('\n')
	process.stdout.close()
	return ipaddress

